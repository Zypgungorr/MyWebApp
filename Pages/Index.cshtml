@page
@model MyWebApp.Pages.IndexModel

<style>
  body {
  margin: 0; /* Kenar boşluklarını kaldır */
  padding: 0; /* İç boşlukları kaldır */
  background-color: #000; /* Arka planı siyah yap */
  border:#000 none;
}

   h2 {
    color: white;
    font-weight: 100;
    font-family: Arial, Helvetica, sans-serif;
     font-size: 250%;
    padding: 0px;
    margin-top: 60px; /* h2'nin altındaki boşluğu kaldırır */
}

#titledesc {
    color: white;
    font-size: 120%;
    padding-left: 0px;
    margin-top: 0; /* #titledesc'in üstündeki boşluğu kaldırır */
}

    .d-flex {
        gap: 10px;
    }

    .movie-card {
        width: 300px;
        flex-shrink: 0;
        text-align: center;
        
       
    }

    .movie-poster {
        width: 100%;
        height: 380px;
        border-radius: 10px;
        object-fit: cover;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
       
    }

    .movie-poster:hover {
        transform: scale(1.05);
    }

    .movie-info {
        margin-top: 10px;
    }

    .movie-title {
        font-size: 1rem;
        font-weight: bold;
        color:white;
    }

    .movie-year {
        font-size: 0.9rem;
        color: gray;
    }
</style>

<body> 

    @{
        ViewData["Title"] = "Home page";
    }


    <h2> SUGGESTIONS FOR YOU </h2>
   <p id="titledesc">
    As suggest for you by CineHorizon voters.
</p>


@{

    var random = new Random();

    var randomMovies = Model.Movies!.OrderBy(x => random.Next()).Take(10).ToList();
}

<div class="container mt-4">
    <div class="d-flex overflow-auto">
        @foreach (var movie in randomMovies)
        {
            <div class="movie-card mx-2">
                <a href="@Url.Page("/MovieDetails", new { id = movie.Title.Replace(" ", "-").ToLower() })">
                    <img src="@movie.Posterurl" alt="@movie.Title poster" class="movie-poster">
                </a>
                <div class="movie-info text-center">
                    <h5 class="movie-title text-truncate">@movie.Title</h5>
                    <p class="movie-year">@movie.Releaseyear</p>
                </div>
            }
        </div>
    </div>
    <br>
    <br>

</body>