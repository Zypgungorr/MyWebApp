@page
@model YourProject.Pages.IndexModel

@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Most Watched</h1>
</div>

<h2>Top 10 on IMDb this week</h2>

<h2>In theaters</h2>

<div class="row">
    @foreach (var movie in Model.Movies)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <a href="@Url.Page("/MovieDetails", new { id = movie.Title.Replace(" ", "-").ToLower() })">
                @await Component.InvokeAsync("MovieCard", new { movie = movie })
            </a>
        </div>
    }
</div>
