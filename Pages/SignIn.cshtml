@page
@model MyWebApp.Pages.SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        color: #ffffff;
    }

    .form-card {
        background-color: #1e1e1e;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        margin-bottom: 100px;
    }

    .form-card .form-group {
        margin-bottom: 20px;
    }

    label {
        font-size: 1rem;
        color: #b3b3b3;
    }

    input {
        background-color: #2a2a2a;
        color: #ffffff;
        border: 1px solid #373737;
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
        width: 100%;
    }

    input::placeholder {
        color: #b3b3b3;
    }

    input:focus {
        outline: none;
        border-color: #1db954;
    }

    .btn-primary {
        background-color: #1db954;
        border: none;
        color: #ffffff;
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #17a44a;
    }

    .text-center p {
        margin-top: 15px;
        color: #b3b3b3;
    }

    .text-center a {
        color: #1db954;
        text-decoration: none;
        font-weight: bold;
    }

    .text-center a:hover {
        text-decoration: underline;
    }
    .baslık{
        margin-top: 100px;
    }
</style>

<div class="container">
    <h1 class="baslık">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="form-card">
                <form method="post">
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" required placeholder="Enter your email" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password" required placeholder="Enter your password" />
                    </div>
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </form>
                <div class="text-center mt-3">
                    <p>Don't have an account? <a asp-page="/SignUp">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
