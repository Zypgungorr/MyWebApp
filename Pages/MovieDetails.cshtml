@page "{id}"
@using YourProject.Models
@model YourProject.Pages.MovieDetailsModel

@{
    ViewData["Title"] = Model.Movie!.Title!; // ! means: it can't be null reference anyway.
}

<style>
    h1 {
        padding-top: 10px;
        color: white;
    }

    body {
        background-color: black;
    }

    #ReleaseYear {

        font-size: 20px;
        color: white;
        display: inline-block;
    }

    #MovieHour {
        font-size: 20px;
        color: white;
        display: inline-block;


    }

    #dot {
        display: inline-block;
        color: white;

    }

    .Poster {
        width: 278px;
        height: 412px;
        object-fit: cover;
        border-radius: 5px;
        color: white;
    }

    .Trailer {
        width: 700px;
        height: 412px;
        border-radius: 5px;
        /* Kenarları yuvarlama (isteğe bağlı) */

    }

    .movie-container {
        display: flex;
        /* Poster ve Trailer yan yana */
        align-items: center;
        /* Dikey hizalamayı ortalar */
        gap: 5px;
        margin-bottom: 10px;

    }

    .genres {
        font-family: Arial, sans-serif;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .genres strong {
        font-weight: bold;
        margin-right: 10px;
    }

    .genres ul {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 10px;
    }

    .genres ul li {
        padding: 5px 10px;
        border: 1px solid #a8a7a7;
        border-radius: 20px;
        background-color: #dddcdc;
        font-size: 14px;
        color: #333;
        text-align: center;
        white-space: nowrap;
    }

    .genres ul li:hover {
        background-color: #fbfafa;
        cursor: pointer;
    }

    /* Ana konteyner için genel düzen */
    /* Ana konteyner ve genel düzen */
    .long_description,
    .director,
    .writer,
    .actors {
        color: white;
        /* Yazı rengi */
        font-size: 16px;
        /* Yazı boyutu */
        font-family: Arial, Helvetica, sans-serif;
        /* Yazı tipi */
        line-height: 1.5;
        /* Satır yüksekliği */
        margin-bottom: 10px;
        /* Bölümler arasında boşluk */
    }

    /* Alt çizgi ekleme */
    .director,
    .writer,
    .actors {
        border-top: 1px solid #444;
        /* Üst çizgi */
        padding-top: 10px;
        /* Çizgi ile içerik arası boşluk */
        margin-top: 10px;
        /* Bölümler arasındaki boşluk */
    }

    /* İlk bölümün çizgisini kaldır */
    .long_description {
        border-top: none;
        /* İlk bölüme çizgi eklenmesin */
    }

    /* Başlıkların kalın stili */
    .director strong,
    .writer strong,
    .actors strong {
        font-weight: bold;
        /* Başlıkları kalın yap */
        margin-right: 0px;
        /* Başlık ile içerik arasında boşluk */
    }

    /* Oyuncular listesi */
    /* Oyuncular başlığı ve listesi */
    .actors ul {
        display: inline;
        list-style: none;
        /* Liste işaretlerini kaldır */
        padding: 0;
        /* İç boşlukları sıfırla */
        margin: 5px 0 0;
        /* Hafif boşluk */
        white-space: nowrap;
        /* Tüm listeyi tek satırda tut */
    }

    .actors li {
        display: inline;
        /* Oyuncuları yatay hizala */
        margin-right: 15px;
        /* Oyuncular arası boşluk */
        cursor: pointer;
        /* El işareti */
        font-size: 16px;
        /* Yazı boyutu */
        flex-direction: row;


    }

    .actors li:hover {
        text-decoration: underline;
        /* Üzerine gelince altı çizgi */

    }


    /* Paragraf stili */
    .long_description p,
    .director p,
    .writer p {
        margin: 0;
        /* Paragrafların kenar boşluklarını sıfırla */
    }


   






    }
</style>

<body>


    <h1>@Model.Movie.Title</h1>
    <div>
        <p id="ReleaseYear">@Model.Movie.Releaseyear</p>
        <p id="dot"> • </p>
        <p id="MovieHour">@Model.Movie.Moviehour</p>
    </div>


    <div class="movie-container">
        <img src="@Model.Movie.Posterurl" alt="@Model.Movie.Title poster" class="Poster">
        <iframe src="@Model.Movie.Trailer" frameborder="0" class="Trailer"></iframe>
    </div>

    <div class="genres">

        <ul>
            @foreach (var genre in Model.Movie?.Genres ?? new List<Genre>())
            {
                <li>@genre?.Name</li>
            }
        </ul>
    </div>


    <div class="long_description">
        <p><strong> @Model!.Movie!.Description</p>
    </div>


    <div>
        <div class="director">
            <p><strong>Director:</strong> @Model.Movie.Director</p>
        </div>
        <div class="writer">
            <p><strong>Writer:</strong> @Model.Movie.Writer</p>
        </div>
        <div class="actors">
            <strong>Actors:</strong>
            <ul>
                @foreach (var actor in Model.Movie?.Actors ?? new List<Actor>())
                {
                    <li>@actor?.Name</li>
                }
            </ul>
        </div>
    </div>
</body>
